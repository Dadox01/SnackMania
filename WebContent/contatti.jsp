<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contattaci</title>
    <link rel="stylesheet" href="code/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">
  </head>
  <body>
	   
    <!--contact section start-->
    <div class="contact-section">
      <div class="contact-info">
        <div><i class="fas fa-map-marker-alt"></i>Via Giovanni Paolo II, 84084 Fisciano SA</div>
        <div><i class="fas fa-envelope"></i>d.avella10@studenti.unisa.it</div>
        <div><i class="fas fa-phone"></i>+39 339 897 8009</div>
      </div>
      <div class="contact-form">
        <h2>Contattaci</h2>
        <form class="contact" action="" method="post">
          <input type="text" name="name" class="text-box" placeholder="Nome" required>
          <input type="email" name="email" class="text-box" placeholder="Email" required>
          <textarea name="message" rows="5" placeholder="Messaggio" required></textarea>
          <input type="submit" name="submit" class="send-btn" value="Invia">
        </form>
      </div>
    </div>
    <!--contact section end-->
    

  </body>
</html>